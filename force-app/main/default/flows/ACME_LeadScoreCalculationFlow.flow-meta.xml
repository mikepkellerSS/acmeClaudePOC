<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <label>Lead Score Calculation Flow</label>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <connector>
            <targetReference>UpdateLeadStatus</targetReference>
        </connector>
    </start>
    <assignments>
        <name>UpdateLeadStatus</name>
        <label>Update Lead Status</label>
        <locationX>50</locationX>
        <locationY>150</locationY>
        <assignmentItems>
            <assignToReference>$Record.Status</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>LeadStatusBasedOnScore</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <formulas>
        <name>LeadStatusBasedOnScore</name>
        <dataType>String</dataType>
        <expression>IF(BLANKVALUE({!$Record.ACME__Lead_Score__c}, 0) >= 70, 'MQL', 
            IF(BLANKVALUE({!$Record.ACME__Lead_Score__c}, 0) >= 40, 'SQL', 'New'))</expression>
    </formulas>
</Flow>