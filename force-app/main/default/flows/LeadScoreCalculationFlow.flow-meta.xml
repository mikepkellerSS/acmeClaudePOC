<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <label>Lead Score Calculation Flow</label>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <object>Account</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <connector>
            <targetReference>CheckScoreThreshold</targetReference>
        </connector>
    </start>
    <decisions>
        <name>CheckScoreThreshold</name>
        <label>Check Score Threshold</label>
        <locationX>50</locationX>
        <locationY>150</locationY>
        <defaultConnector>
            <targetReference>UpdateToSQL</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Score Below 70</defaultConnectorLabel>
        <rules>
            <name>HighScore</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.AnnualRevenue</leftValueReference>
                <operator>GreaterThanOrEqualTo</operator>
                <rightValue>
                    <numberValue>1000000.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>UpdateToMQL</targetReference>
            </connector>
            <label>High Revenue Account</label>
        </rules>
    </decisions>
    <recordUpdates>
        <name>UpdateToMQL</name>
        <label>Update to MQL</label>
        <locationX>50</locationX>
        <locationY>250</locationY>
        <inputAssignments>
            <field>Type</field>
            <value>
                <stringValue>Customer - Direct</stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>UpdateToSQL</name>
        <label>Update to SQL</label>
        <locationX>200</locationX>
        <locationY>250</locationY>
        <inputAssignments>
            <field>Type</field>
            <value>
                <stringValue>Prospect</stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
</Flow>