<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <label>Lead Score Calculation Flow</label>
    <processType>AutoLaunchedFlow</processType>
    <triggerType>RecordAfterSave</triggerType>
    <start>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <connector>
            <targetReference>UpdateLeadStatus</targetReference>
        </connector>
        <object>Lead</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
    </start>
    <recordUpdates>
        <name>UpdateLeadStatus</name>
        <label>Update Lead Status</label>
        <locationX>50</locationX>
        <locationY>150</locationY>
        <inputAssignments>
            <field>Status</field>
            <value>
                <elementReference>LeadStatusBasedOnScore</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <formulas>
        <name>LeadStatusBasedOnScore</name>
        <dataType>String</dataType>
        <expression>IF(BLANKVALUE({!$Record.Lead_Score__c}, 0) >= 70, 'MQL', 
            IF(BLANKVALUE({!$Record.Lead_Score__c}, 0) >= 40, 'SQL', 'New'))</expression>
    </formulas>
</Flow>