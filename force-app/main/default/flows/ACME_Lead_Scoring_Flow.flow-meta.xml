<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <description>Trigger lead scoring on lead create and update</description>
    <interviewLabel>Lead Scoring Flow</interviewLabel>
    <label>ACME Lead Scoring</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>AutoLaunchedFlow</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Calculate_Lead_Score</targetReference>
        </connector>
        <object>Lead</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <actionCalls>
        <name>Calculate_Lead_Score</name>
        <label>Calculate Lead Score</label>
        <namespace>ACME_LeadScoringService</namespace>
        <actionName>calculateLeadScore</actionName>
        <actionType>apex</actionType>
        <dataParameters>
            <name>leadId</name>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </dataParameters>
    </actionCalls>
    <status>Active</status>
</Flow>